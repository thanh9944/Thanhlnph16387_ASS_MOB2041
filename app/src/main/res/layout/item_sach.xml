<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_masach"
        android:text="mã loại:"
        android:textColor="#f00"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_tensach"
        android:text="Tên sách:"
        android:layout_below="@+id/tv_masach"
        android:textColor="#2196F3"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_giathuesach"
        android:text="Giá thuê:"
        android:layout_below="@+id/tv_tensach"
        android:textColor="#009688"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_loaisach_sach"
        android:text="Loại sách:"
        android:layout_below="@+id/tv_giathuesach"
        android:textColor="#9C27B0"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/img_delete_sach"
        android:layout_width="50dp"
        android:src="@drawable/ic_close"
        android:layout_alignParentRight="true"
        android:layout_height="50dp"/>
</RelativeLayout>
</androidx.cardview.widget.CardView>